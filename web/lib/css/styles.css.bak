.sidebar {
  height: 100vh;
  width: 220px;
  padding-top: 2%;
  position: fixed;
  display: flex;
  flex-direction: column;
  align-items: center; 
  background-color: #191A1C;
}

.sidebar a.active {
  background-color: #555;
}

.sidebar .signup-btn {
  margin-top: 20px;
}

.main {
  margin-left: 200px;
  padding: 20px;
}

.sidebar .custom-input {
  height: 32px;
}

.sidebar .custom-button {
  height: 32px;
  text-align: center;
  line-height: 0%;
}

.sidebar .texto-login {
  color: #fff;
}

.sidebar .cadastro {
  font-size: 90%;
}

.container {
  height: 100vh;
  padding-top: 6%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.container .form-control {
  width: 350px;
}

.container .custom-h3 {
  color: #fff;
}

.container .required-input {
  position: relative;
}

.container .required-input::after {
  content: "*";
  color: red;
  position: absolute;
  top: 2px;
  right: 5px;
  font-size: 20px;
}